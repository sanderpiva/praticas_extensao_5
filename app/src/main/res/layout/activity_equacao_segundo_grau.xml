<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/igual"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Model.Eq2Grau.EquacaoSegundoGrau">

    <TextView
        android:id="@+id/textViewConceitoEquacaoSegundoGrau"
        android:layout_width="378dp"
        android:layout_height="77dp"
        android:layout_marginStart="@dimen/dimens"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="@dimen/dim_marge"
        android:justificationMode="inter_word"
        android:padding="0dp"
        android:text="Equacao 2º grau:  é uma equação do tipo ax2+bx+c=0, em que a, b e c são número reais, conhecidos como coeficientes da equação. Raíz da equação 2º: y = 0. Fórmulas: Δ = (b² - 4*a*c) -> x = ±√Δ/2a"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_marge"
        android:layout_marginTop="@dimen/dimens"
        android:text="y: função"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMaterialApoioEquacaoSegundoGrau"/>

    <TextView
        android:id="@+id/textViewCoeficientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_marge"
        android:layout_marginTop="16dp"
        android:text="a,b,c: coeficientes"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewY" />

    <TextView
        android:id="@+id/textViewPratique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dimens"
        android:text="Pratique: Preencha 'a', 'op1', 'b' ,'op2', 'c' e calcule a raiz"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOperador2" />

    <ImageView
        android:id="@+id/copyrights"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="@dimen/dimens"
        android:layout_marginEnd="@dimen/dimens"
        android:layout_marginBottom="@dimen/dimens2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResutadoEquacaoSegundoGrau"
        app:layout_constraintVertical_bias="0.862"
        app:srcCompat="@drawable/logotipo" />

    <Button
        android:id="@+id/btnMaterialApoioEquacaoSegundoGrau"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens"
        android:layout_marginTop="@dimen/dimens"
        android:layout_marginEnd="@dimen/dimens"
        android:text="Material Apoio"
        app:layout_constraintEnd_toStartOf="@+id/btnVideoEquacaoSegundoGrau"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewConceitoEquacaoSegundoGrau" />

    <Button
        android:id="@+id/btnVideoEquacaoSegundoGrau"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens"
        android:layout_marginEnd="@dimen/dimens"
        android:text="Video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMaterialApoioEquacaoSegundoGrau"
        app:layout_constraintTop_toBottomOf="@+id/textViewConceitoEquacaoSegundoGrau" />

    <TextView
        android:id="@+id/textViewOperador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dimens"
        android:text="operador 1 (op1): +, -"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCoeficientes" />

    <TextView
        android:id="@+id/textViewOperador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dimens"
        android:text="operador 2 (op2): +, -"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOperador1" />

    <TextView
        android:id="@+id/textViewResutadoEquacaoSegundoGrau"
        android:layout_width="379dp"
        android:layout_height="197dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:justificationMode="inter_word"
        android:text="Resultado"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcularEquacaoSegundoGrau" />

    <Button
        android:id="@+id/btnCalcularEquacaoSegundoGrau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Calcular Raíz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <EditText
        android:id="@+id/editTextCoeficienteAngular"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="a"
        android:inputType="number"
        android:minHeight="48dp"
        android:maxLength="2"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <EditText
        android:id="@+id/editTextEqSegundoGrauOp1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="op1"
        android:inputType="text"
        android:maxLength="1"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <EditText
        android:id="@+id/editTextCoeficienteB"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="b"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editTextEqSegundoGrauOp1"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="y"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="x2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/editTextCoeficienteAngular"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="x"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/editTextCoeficienteB"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <EditText
        android:id="@+id/editTextEqSegundoGrauOp2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="op2"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />

    <EditText
        android:id="@+id/editTextEquacao2GrauCoeficienteC"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="c"
        android:maxLength="2"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/editTextEqSegundoGrauOp2"
        app:layout_constraintTop_toBottomOf="@+id/textViewPratique" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
