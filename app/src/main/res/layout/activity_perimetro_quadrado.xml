<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Model.PerimetroQuadrado.PerimetroQuadrado">

        <TextView
            android:id="@+id/textViewConceitoPerimetroQuadrado"
            android:layout_width="379dp"
            android:layout_height="82dp"
            android:layout_marginStart="@dimen/dimens"
            android:layout_marginTop="@dimen/dimens"
            android:layout_marginEnd="@dimen/dimens"
            android:justificationMode="inter_word"
            android:text="@string/conceitoPerimetroQuadrado"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewPerimetroQuadrado"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_marginTop="@dimen/dimens"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPratiquePerimetroQuadrado"
            app:srcCompat="@drawable/image"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textViewFormulaPerimetroQuadrado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens"
            android:layout_marginTop="@dimen/dimens"
            android:layout_marginEnd="@dimen/dimens"
            android:text="@string/FormulaPerimetroQuadrado"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewConceitoPerimetroQuadrado" />

        <Button
            android:id="@+id/btnCalculaPerimetroQuadrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens"
            android:layout_marginEnd="@dimen/dimens"
            android:text="Calcula perimetro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLadoPerimetroQuadrado" />

        <EditText
            android:id="@+id/editTextLadoPerimetroQuadrado"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens"
            android:layout_marginEnd="@dimen/dimens"
            android:ems="10"
            android:hint="@string/ladoPerimetroQuadrado"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPerimetroQuadrado" />

        <TextView
            android:id="@+id/textViewResultadoPerimetroQuadrado"
            android:layout_width="384dp"
            android:layout_height="106dp"
            android:layout_marginStart="@dimen/dimens"
            android:layout_marginTop="@dimen/dimens2"
            android:layout_marginEnd="@dimen/dimens"
            android:text="@string/textResultadoPerimtroQuadrado"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCalculaPerimetroQuadrado" />

        <Button
            android:id="@+id/btnVideoPerimetroQuadrado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dimens"
            android:layout_marginEnd="@dimen/dimens"
            android:text="video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMaterialApoioPerimetroQuadrado"
            app:layout_constraintTop_toBottomOf="@+id/textViewFormulaPerimetroQuadrado" />

        <TextView
            android:id="@+id/textViewPratiquePerimetroQuadrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens"
            android:layout_marginTop="@dimen/dimens"
            android:layout_marginEnd="@dimen/dimens"
            android:text="@string/pratiquePerimetroQuadrado"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnVideoPerimetroQuadrado" />

        <Button
            android:id="@+id/btnMaterialApoioPerimetroQuadrado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens"
            android:layout_marginTop="@dimen/dimens"
            android:layout_marginEnd="8dp"
            android:text="@string/materialApoio"
            app:layout_constraintEnd_toStartOf="@+id/btnVideoPerimetroQuadrado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFormulaPerimetroQuadrado" />

        <ImageView
            android:id="@+id/copyrights"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/dimens"
            android:layout_marginEnd="@dimen/dimens"
            android:layout_marginBottom="@dimen/dimens2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewResultadoPerimetroQuadrado"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/logotipo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>




